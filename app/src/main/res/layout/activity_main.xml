<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/llama"
        android:alpha="1.0" /> <!-- Ajusta la transparencia con alpha (0.0 - 1.0) -->

    <!-- Capa blanca transparente sobre la imagen -->
    <View
        android:id="@+id/whiteOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:alpha="0.7" /> <!-- Transparencia de la capa blanca -->

    <!-- Contenido principal con la capa sobre la imagen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Encabezado con el nombre de la aplicación -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AutoAlert"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Información de velocidad, ubicación y dirección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Velocidad"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubicación: --, --"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección: --"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Línea blanca para separar las secciones -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"
            android:layout_marginBottom="32dp" />

        <!-- Botones de Iniciar y Parar/Descargar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Iniciar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/black"
                android:layout_marginEnd="16dp"
                android:padding="16dp" />

            <Button
                android:id="@+id/button_stop_download"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Parar y Descargar"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/black"
                android:padding="16dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
