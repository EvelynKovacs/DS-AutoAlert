<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para ingresar el SSID -->
    <TextView
        android:id="@+id/ssidLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSID:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ssidEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nombre del SSID" />

    <!-- Campo para ingresar la contraseña -->
    <TextView
        android:id="@+id/passwordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la contraseña"
        android:inputType="textPassword" />

    <!-- Texto de estado del hotspot -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado del Hotspot"
        android:textSize="16sp"
        android:paddingTop="16dp" />

    <!-- Botón para alternar el estado del Hotspot -->
    <Button
        android:id="@+id/toggleHotspotButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activar Hotspot"
        android:layout_marginTop="16dp" />

    <!-- Mostrar el SSID y la contraseña del Hotspot activo -->
    <TextView
        android:id="@+id/ssidTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSID:"
        android:textSize="16sp"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSendBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Broadcast" />

    <TextView
        android:id="@+id/ipTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="IPs recibidas:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSendMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Mensaje a IPs" />


</LinearLayout>
