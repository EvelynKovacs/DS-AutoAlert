<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".view.fragments.PasosASeguirFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen de fondo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fondo2"
            android:scaleType="centerCrop" />

        <!-- Capa oscura -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA000000" /> <!-- Cambia la opacidad según lo necesites -->
    </FrameLayout>

    <ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/btnContinue"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:orientation="vertical">

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:text="Próximos Pasos"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primaryColor"
        android:shadowColor="@android:color/black"
        android:shadowRadius="1.5"
        android:shadowDx="1"
        android:shadowDy="1"/>

    <!-- Explicación con fondo -->
    <TextView
        android:id="@+id/txtExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:padding="16dp"
        android:text="A continuación, deberás completar tu información personal, como nombre, apellido, DNI y otros detalles médicos importantes."
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtExplanation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:padding="16dp"
        android:text="Además, tendrás que seleccionar tus contactos de emergencia. Por favor, elígelos cuidadosamente. Estas personas deben ser de confianza y estar disponibles en caso de una emergencia."
        android:textColor="@color/white"
        android:textSize="16sp" />

    <!-- Texto en rojo -->
    <TextView
        android:id="@+id/txtRedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:elevation="2dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:padding="16dp"
        android:text="La información proporcionada será utilizada únicamente en situaciones de emergencia."
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:textStyle="bold" />

    </LinearLayout>
    </ScrollView>

        <!-- Botón Incorporado -->
    <TextView
    android:id="@+id/btnContinue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:padding="16dp"
    android:text="Continuar"
    android:textColor="@color/accentColor"
    android:textSize="18sp"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true" />

        </androidx.constraintlayout.widget.ConstraintLayout>
