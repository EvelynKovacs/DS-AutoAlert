<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".view.fragments.PantallaBienvenidaFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen de fondo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bienvenida"
            android:scaleType="centerCrop" />

        <!-- Capa oscura -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AA000000" /> <!-- Cambia la opacidad según lo necesites -->
    </FrameLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnContinue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="16dp"
                android:text="Bienvenido a AutoAlert"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"
                android:shadowColor="@android:color/black"
                android:shadowRadius="3"
                android:shadowDx="2"
                android:shadowDy="2"/>

            <!-- Explicación con fondo -->
            <TextView
                android:id="@+id/txtExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:elevation="2dp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:padding="16dp"
                android:text="Tu seguridad es nuestra prioridad.\nEsta aplicación detectará accidentes automáticamente para ayudarte a recibir asistencia en el menor tiempo posible."
                android:textColor="@color/white"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

    <!-- Botón Incorporado -->
    <TextView
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:text="Continuar"
        android:textColor="@color/accentColor"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/ripple_button_effect"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
